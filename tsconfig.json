{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "jsx": "react",
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["**/*"]
}
